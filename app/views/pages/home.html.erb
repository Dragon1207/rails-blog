<div class="divide-y divide-gray-200 dark:divide-gray-700">
  <div class="mb-[50px] text-[110px] text-[#0F172A] dark:text-gray-100">
    <div class='font-berlinSans font-black leading-[100px]'>Get lost in the world</div>
    <div class="flex font-berlinSans leading-[75px] mt-[40px]"><div id='typewriter' class='typewrite' data-period='2000' data-type=''></div><div>.</div></div>
    <div class='text-[40px] text-[#485569] font-poppins leading-[50px] mt-[40px] dark:text-gray-100'>A book and video course that teaches you how to design your own icons from scratch.</div>
  </div>
  <% if @categories.length() > 0 %>
  <div class="bg-white dark:bg-gray-900 w-full overflow-x-scroll flex justify-between space-x-4 whitespace-nowrap py-3 px-4 text-center">
    <button onclick="clickedCateBtn('all', 'all')" id="cateBtn-all", class="bg-[#FF0A0A] border border-teal-500 text-teal-500 rounded-full px-6 py-2">All</button>
    <% @categories.each do |category| %>
        <button onclick="clickedCateBtn(<%= category.name %>, <%= category.slug %>)" id="cateBtn-<%= category.name %>", class="border border-teal-500 text-teal-500 rounded-full px-6 py-2"><%= category.name %></button>
    <% end %>
  </div>
  <% end %>
  <ul id="posts">
    <%= render @posts %>
  </ul>
  <div class="space-y-2 pt-6 pb-8 md:space-y-5">
    <nav class="flex justify-between">
      <% if @posts.first_page? %>
        <span></span>
      <% else %>
        <%= link_to_previous_page @posts, 'Previous Page' %>
      <% end %>
      <span>
        <%= page_entries_info @posts %>
      </span>
      <% if @posts.last_page? %>
        <span></span>
      <% else %>
        <%= link_to_next_page @posts, 'Next Page' %>
      <% end %>
    </nav>
  </div>
</div>
<script>
    var TxtType = function(el, toRotate, period) {
        this.toRotate = toRotate;
        this.el = el;
        this.loopNum = 0;
        this.period = parseInt(period, 10) || 2000;
        this.txt = '';
        this.tick();
        this.isDeleting = false;
    };

    TxtType.prototype.tick = function() {
        var i = this.loopNum % this.toRotate.length;
        var fullTxt = this.toRotate[i];

        if (this.isDeleting) {
        this.txt = fullTxt.substring(0, this.txt.length - 1);
        } else {
        this.txt = fullTxt.substring(0, this.txt.length + 1);
        }

        this.el.innerHTML = '<span class="wrap">'+this.txt+'</span>';

        var that = this;
        var delta = 200 - Math.random() * 100;

        if (this.isDeleting) { delta /= 2; }

        if (!this.isDeleting && this.txt === fullTxt) {
        delta = this.period;
        this.isDeleting = true;
        } else if (this.isDeleting && this.txt === '') {
        this.isDeleting = false;
        this.loopNum++;
        delta = 500;
        }

        setTimeout(function() {
        that.tick();
        }, delta);
    };

    
  var typewriter = document.getElementById('typewriter');
  var toRotate = typewriter.getAttribute('data-type');
  var period = typewriter.getAttribute('data-period');
  fetch('/typewords')
  .then((response) => response.json())
  .then((data) => {
    toRotate=`["${data.join('","')}"]`
    if (toRotate) {
      new TxtType(typewriter, JSON.parse(toRotate), period);
    }
  });
  // INJECT CSS
  var css = document.createElement("style");
  css.type = "text/css";
  css.innerHTML = ".typewrite > .wrap { border-right: 2px solid #000000; animation: caret 0.5s steps(1) infinite;}";
  document.body.appendChild(css);

  var curId = ""
  var pastId = "cateBtn-all"
  var text = ""

  function clickedCateBtn(cateName, cateSlug) {
    console.log(cateName);
    fetch('/'+cateSlug)
    .then((response) => response.json())
    .then((data) => {
      console.log(data)
      console.log(data.current_category)
      
      curId = "cateBtn-" + data.current_category
      document.getElementById(pastId).classList.remove("bg-[#FF0A0A]")
      document.getElementById(curId).classList.add("bg-[#FF0A0A]")
      pastId = curId

      const postPart = document.getElementById("posts")
      text = ""
      data.posts.forEach(buildPost);
      function buildPost(item, index) {
        console.log(item, index)
        text += `<li id="post_${index+1}" class="py-4">
          <article class="space-y-2 xl:grid xl:grid-cols-4 xl:items-baseline xl:space-y-0">
            <div class="space-y-3 xl:col-span-3">
              <div>
                <h3 class="text-2xl font-bold leading-8 tracking-tight">
                  <a class="text-gray-900 dark:text-gray-100" href="/posts/1112">${item.name}</a>`
        if (item.published != true) {text += `<span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">Preview</span>`}
        text += `</h3>
                <div class="flex flex-wrap">`
        data.cates[index].forEach((item, index) => {
        text += `<div id="category_${item.id}">
                      <a class="mr-3 text-sm font-medium uppercase text-primary-500 hover:text-primary-600 dark:hover:text-primary-400" href="/categories/${item.slug}">${item.name}</a>
                    </div>
                  `
        })
        text += `</div>
              </div>
              <div class="prose max-w-none text-gray-500 dark:text-gray-400">
                ${item.description}
              </div>
            </div>
          </article>
        </li>`
        console.log(item, index)
      }
      postPart.innerHTML = text
    });
  }
</script>