<li id="<%= dom_id post %>" class="py-4">
  <article class="space-y-2 xl:grid xl:grid-cols-4 xl:items-baseline xl:space-y-0">
    <dl>
      <dt class="sr-only">Published on</dt>
      <dd class="text-base font-medium leading-6 text-gray-500 dark:text-gray-400">
        <time dateTime="<%= post.published_date %>"><%= post.published_date.strftime("%B %-d, %Y") %></time>
      </dd>
    </dl>
    <div class="space-y-3 xl:col-span-3">
      <div>
        <h3 class="text-2xl font-bold leading-8 tracking-tight">
          <%= link_to post.name, post, class: 'text-gray-900 dark:text-gray-100' %>
          <% if !post.published? %>
            <span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">Preview</span>
          <% end %>
        </h3>
        <div class="flex flex-wrap">
          <% post.tags.each do |tag| %>
            <%= render tag %>
          <% end %>
        </div>
      </div>
      <div class="prose max-w-none text-gray-500 dark:text-gray-400">
        <%= post.description %>
      </div>
    </div>
  </article>
</li>
